    <hr>
    <h2>Dolci in vetrina</h2>

    {% if vendite|length > 0 %}
        {% for vendita in vendite %}
            <h3>{{ vendita.Dolce }}</h3> <h4>Prezzo â‚¬ {{ vendita.Dolce.prezzo }}  -   Messo in vetrina il {{ vendita.data|format_datetime('medium', 'short') }} - Pezzi in vendita: {{ vendita.disponibilita }}</h4>
